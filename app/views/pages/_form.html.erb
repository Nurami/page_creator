<%= form_for(page) do |f| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>
      <ul>
      <% page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end%>

  <%= javascript_include_tag 'Ckeditor.cdn_url'%>
  
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field">
     <%= f.cktext_area :data,  ckeditor: { language: 'en'} %>
  </div>
  <br>
  <% if action_name == "edit" %>
  <div class="field">
    <%= f.label :password %>
    <%= f.text_field :password, :value => ''%>
  </div>
  <% end %>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
  <div class="button">
    <%= link_to 'Back', :back %>  
  </div>
<% end %>